    fflush(stdin);
    gets(nombre);

    int valido = validacionString(nombre);


    if(valido == 1)
    {
        strcpy(info->nombre, nombre);
    }

    else if(valido == 0)
    {

        while (valido == 0)
        {

            printf("Ingrese un nombre valido\n NOMBRE: ");
            fflush(stdin);
            gets(nombre);

